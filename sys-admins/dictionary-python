#########################
# Dictionary is key value
#########################

mydetails = {"Name": "Muhammad Asim", "Age": "40", "Role": "DevOps"}

mydetails['Role'] = 'Sre & DevOPs'   # updated value of key

print(mydetails)

print(mydetails['Role'])

# Adding value in dictionary

mydetails['City'] = 'Lahore'

print(mydetails)

print(mydetails['City'])

# print all keys
print(mydetails.keys())

# print all values
print(mydetails.values())

# print all keys in the form list
mykeys = list(mydetails.keys())

print(mykeys)

# print all values in the form of list
myvalues = list(mydetails.values())

print(myvalues)

# advantage of converting this into list
print(myvalues[0])

# delete removes last item

#del mykeys[0]

#print(mykeys)

# pop removes item but asks for a key, better is to use pop

mykeys.pop(1)   # On index number we have Role it removes Role

print(mykeys)
